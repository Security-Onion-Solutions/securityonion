# If logrotate script doesn't already exist, create it
#FILE="/etc/logrotate.d/so-curator-closed-delete"
#if ! [ -f ${FILE} ]; then
#        cat << EOF > ${FILE}
#/var/log/nsm/so-curator-closed-delete.log {
#    daily
#    rotate 7
#    copytruncate
#    compress
#    missingok
#    notifempty
#}
#EOF
#fi

# Avoid starting multiple instances
