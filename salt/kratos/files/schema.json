{
    "$id": "securityonion.schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Person",
    "type": "object",
    "properties": {
      "traits": {
        "type": "object",
        "properties": {
        "email": {
          "type": "string",
          "format": "email",
          "title": "E-Mail",
          "minLength": 6,
          "maxLength": 100,
          "ory.sh/kratos": {
            "credentials": {
              "password": {
                "identifier": true
              }
            },
            "verification": {
              "via": "email"
            }
          }
        },
        "firstName": {
          "type": "string",
          "title": "First Name",
          "maxLength": 100
        },
        "lastName": {
          "type": "string",
          "title": "Last Name",
          "maxLength": 100
        },
        "note": {
          "type": "string",
          "title": "Note",
          "maxLength": 100
        }
      },
      "required": [
        "email"
      ],
      "additionalProperties": false
    }
  }
}