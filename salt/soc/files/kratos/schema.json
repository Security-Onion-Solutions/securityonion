{
    "$id": "securityonion.schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Person",
    "type": "object",
    "properties": {
      "email": {
        "type": "string",
        "format": "email",
        "title": "E-Mail",
        "minLength": 6,
        "ory.sh/kratos": {
          "credentials": {
            "password": {
              "identifier": true
            }
          },
          "verification": {
            "via": "email"
          }
        }
      }
    },
    "required": [
      "email"
    ],
    "additionalProperties": false
  }