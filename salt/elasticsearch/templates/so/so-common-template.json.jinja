      "analyzer": {
        "es_security_analyzer": {
          "type": "custom",
          "char_filter": [ "whitespace_no_way" ],
          "filter": [ "lowercase", "trim" ],
          "tokenizer": "keyword"
        }
      },
      "char_filter": {
        "whitespace_no_way": {
          "type": "pattern_replace",
          "pattern": "(\\s)+",
          "replacement": "$1"
        }
      },  
      "filter" : {
        "path_hierarchy_pattern_filter": {
          "type" : "pattern_capture",
          "preserve_original": true,
          "patterns": [
            "((?:[^\\\\]*\\\\)*)(.*)",
            "((?:[^/]*/)*)(.*)"
          ]
        }
      },  
      "tokenizer": {
        "path_tokenizer": {
          "type": "path_hierarchy",
          "delimiter": "\\"
        }
      }
    }
  },
