{
  "_meta": {
    "documentation": "https://www.elastic.co/guide/en/ecs/current/ecs-base.html",
    "ecs_version": "1.12.2"
  },
  "template": {
    "mappings": {
      "properties": {
        "@timestamp": {
          "type": "date"
        },
        "labels": {
          "type": "object"
        },
        "message": {
          "type": "match_only_text",
	  "fields": {
            "text": {
              "type": "match_only_text"
            }
          }
        },
        "tags": {
          "ignore_above": 1024,
          "type": "keyword",
          "fields": {
            "text": {
              "type": "match_only_text"
            }
          }
        }
      }
    }
  }
}
