filter {
  if "syslog" in [tags] and "test_data" not in [tags] {
    mutate {
	  ##add_tag => [ "conf_file_9034"]
	}
  }
}
output {
  if "syslog" in [tags] and "test_data" not in [tags] {
    elasticsearch {
      hosts => "{{ ES }}"
      index => "so-syslog-%{+YYYY.MM.dd}"
      template_name => "logstash"
      template => "/so-common-template.json"
      template_overwrite => true
    }
  }
}
