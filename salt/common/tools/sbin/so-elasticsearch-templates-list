{%- set NODEIP = salt['pillar.get']('elasticsearch:mainip', '') -%}
. /usr/sbin/so-common
if [ "$1" == "" ]; then
    curl -s -k -L https://{{ NODEIP }}:9200/_template/* | jq 'keys'
else
    curl -s -k -L https://{{ NODEIP }}:9200/_template/$1 | jq
fi
