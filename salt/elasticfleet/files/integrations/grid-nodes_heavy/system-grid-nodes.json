{
  "policy_id": "so-grid-nodes_heavy",
  "package": {
    "name": "system",
    "version": ""
  },
  "name": "system-grid-nodes_heavy",
  "namespace": "default",
  "inputs": {
    "system-logfile": {
      "enabled": true,
      "streams": {
        "system.auth": {
          "enabled": true,
          "vars": {
            "paths": [
              "/var/log/auth.log*",
              "/var/log/secure*"
            ]
          }
        },
        "system.syslog": {
          "enabled": true,
          "vars": {
            "paths": [
              "/var/log/messages*",
              "/var/log/syslog*"
            ]
          }
        }
      }
    },
    "system-winlog": {
      "enabled": false
    },
    "system-system/metrics": {
      "enabled": false
    }
  },
  "force": true
}
